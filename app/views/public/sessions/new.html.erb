<div class="container pb-5">
  <h4 class="mt-5 mb-5">ユーザーログイン</span></h4>

  <%= form_with model: @user, url: session_path(resource_name) do |f| %>

  <div class="row mb-4">
    <label class="col-lg-3">メールアドレス</label>
    <div class="col-lg-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', size: 50 %>
    </div>
  </div>

  <div class="row mb-4">
    <label class="col-lg-3">パスワード</label>
    <div class="col-lg-4">
      <%= f.password_field :password, autocomplete: "current-password", size: 50 %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-lg-3"></div>
    <div class="col-lg-4">
      <%= f.submit "ログイン", class: 'btn btn-info w-75' %>
    </div>
  </div>
  <% end %>

  <h5 class="mb-3"><span style="background: #FFEBD2;">会員登録がお済みでない方</span></h5>
  <div class="col-lg-6">
    <%= link_to "こちら", new_user_registration_path %>から新規登録を行ってください。
  </div>

</div>
