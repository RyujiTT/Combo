<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= truncate(post.body, length: 10) %></td>
        <td class=<%= "favorite-" + post.id.to_s %> >
            <%= render "public/favorites/btn", post: post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>