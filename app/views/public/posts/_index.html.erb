<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
    <% end %>
  </tbody>
</table>