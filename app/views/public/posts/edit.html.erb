<div class="container">
  <h2>投稿編集画面</h2>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_with model: @post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :タイトル, class: 'mb-2' %>
          <%= f.text_field :title, class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.label :本文, class: 'mb-2' %>
          <%= f.text_area :body, class: 'form-control mb-3', rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success mb-3' %>
          <div class="me-auto">
      		  <%= link_to 'Back', @post, class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>