<div class="container">
  <h2 class="mx-auto mt-5">ユーザー情報</h2>
  <div class="row">
    <div class="col-md-8 mt-5 mx-auto">
      <table class="table">
        <tr>
          <th>名前:</th>
          <th><%= @user.name %></th>
          <th><%= link_to '編集', edit_user_path(@user), class: 'btn btn-success' %></th>
        </tr>
        <tr>
          <th>Email address:</th>
          <th><%= @user.email %></th>
        </tr>
      </table>
    </div>
  </div>
</div>