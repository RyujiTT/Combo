<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 mx-auto">
      <h2 class="mb-3"><%= @group.name %>に所属しているメンバー一覧</h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>名前</th>
            <th>email address</th>
          </tr>
        </thead>
        <tbody>
          <% @group.users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>