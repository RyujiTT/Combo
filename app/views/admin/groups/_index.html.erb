<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <% if group.group_image.attached? %>
            <%= image_tag group.group_image, size: "50x50" %>
          <% else %>
            <%= image_tag asset_path("no_image.png"), size: "50x50" %>
          <% end %>
        </td>
        <td><%= link_to group.name, admin_group_path(group) , data: {"turbolinks" => false} %></td>
        <td><%= group.introduction %></td>
        <td><%= group.group_users.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
