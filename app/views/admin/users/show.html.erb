<div class="container">
  <h2 class="mx-auto mt-5">ユーザー情報</h2>
  <div class="row">
    <div class="col-md-8 mt-5 mx-auto">
      <table class="table">
        <tr>
          <th>名前:</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>Email address:</th>
          <th><%= @user.email %></th>
        </tr>
        <tr>
          <th>ユーザー状況:</th>
          <th>
            <% if @user.is_deleted == false %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="">退会済み</p>
            <% end %>
          </th>
          <th><%= link_to "変更", edit_admin_user_path(@user), class: 'btn btn-success' %></th>
        </tr>
      </table>
    </div>
  </div>
</div>